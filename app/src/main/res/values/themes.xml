<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyExpenses" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- added for settings page, all fragments are affected -->
        <item name="android:windowBackground">@color/background</item>

        <!-- https://stackoverflow.com/questions/3551169/change-background-color-of-preference/67537994#67537994-->
        <!-- <item name="preferenceTheme">@style/preference</item>-->
    </style>

<!--<style name="preference" parent="Theme.MaterialComponents or Theme.AppCompat or @style/PreferenceThemeOverlay">
        <item name="android:background">@color/background</item>
    </style>-->

</resources>